#tag Events PushButton1
	#tag Event
		Sub Action()
		  if myType="" Then
		    strAnswer=theValueField.Text
		  elseif myType="list" then
		    strAnswer=pmOptions.Text
		  end if
		  self.Close
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events lstCheckBoxes
	#tag Event
		Sub CellAction(row As Integer, column As Integer)
		  if row<me.ListCount Then
		    if column=0 Then
		      if me.CellCheck(row,column)=True Then
		        jAnswer.Append me.Cell(row,1)
		      else
		        for i As Integer=0 to jAnswer.Count-1
		          if jAnswer.Value(i)=me.Cell(row, 1) Then
		            jAnswer.Remove(i)
		            exit for
		          end if
		        next
		      end if
		    end if
		  end if
		  
		  
		End Sub
	#tag EndEvent
#tag EndEvents
