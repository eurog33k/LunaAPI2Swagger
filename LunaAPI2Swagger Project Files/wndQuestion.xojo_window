#tag WindowCode
	#tag Method, Flags = &h0
		Function ShowModal(strName As String, strPrompt As String, strDefaultValue As String, Optional strType As String, optional Options() As String) As String
		  myType=strType
		  if strType="" then
		    me.Title=strName
		    theValueField.Visible=True
		    theValueField.Enabled=True
		    pmOptions.Visible=False
		    pmOptions.Enabled=False
		    lstCheckBoxes.Visible=False
		    lstCheckBoxes.Enabled=False
		    
		    thePromptText.Text = strPrompt //set the prompt
		    theValueField.Text = strDefaultValue
		    super.showModal //show the window
		    return strAnswer //return what they entered
		    
		  elseif strType="list" then
		    me.Title=strName
		    pmOptions.Visible=True
		    pmOptions.Enabled=True
		    theValueField.Visible=False
		    theValueField.Enabled=False
		    lstCheckBoxes.Visible=False
		    lstCheckBoxes.Enabled=False
		    
		    pmOptions.DeleteAllRows
		    pmOptions.AddRows(Options)
		    Dim iDefault As Integer=Options.IndexOf(strDefaultValue)
		    if iDefault=-1 then iDefault=0
		    pmOptions.ListIndex=iDefault
		    
		    super.showModal //show the window
		    return strAnswer //return what they entered
		    
		  ElseIf strType="checkbox" Then
		    me.Title=strName
		    pmOptions.Visible=False
		    pmOptions.Enabled=False
		    theValueField.Visible=False
		    theValueField.Enabled=False
		    lstCheckBoxes.ColumnType(0)=Listbox.TypeCheckbox
		    lstCheckBoxes.Visible=True
		    lstCheckBoxes.Enabled=True
		    
		    lstCheckBoxes.DeleteAllRows
		    'lstCheckBoxes.AddRows(Options)
		    for i As Integer=0 to Options.Ubound
		      lstCheckBoxes.AddRow("",Options(i))
		    next
		    
		    jAnswer = New JSONItem_MTC
		    
		    super.showModal //show the window
		    
		    return jAnswer.ToString //return what they entered
		    
		  end if
		  Return ""
		  
		End Function
	#tag EndMethod


	#tag Property, Flags = &h0
		jAnswer As JSONItem_MTC
	#tag EndProperty

	#tag Property, Flags = &h0
		myType As String
	#tag EndProperty

	#tag Property, Flags = &h1
